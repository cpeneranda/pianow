<div class="container">
  <div class="stepwizard">
    <div class="stepwizard-row setup-panel">
      <div class="stepwizard-step">
        <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
        <p>Step 1</p>
      </div>
      <div class="stepwizard-step">
        <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
        <p>Step 2</p>
      </div>
      <div class="stepwizard-step">
        <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
        <p>Step 3</p>
      </div>
    </div>
  </div>
  <div class="container">
    <%= simple_form_for(@piano) do |f| %>
    <div class="col-xs-12 form">
      <%= f.error_notification %>
      <div class="row setup-content" id="step-1">
        <div class="col-xs-12">
          <div class="col-md-12">
            <h3> Step 1</h3>
            <div class="form-group">
              <%= f.input :title, label_html: { class: 'control-label' }, input_html: { class: 'input-form' }, placeholder: 'Title' %>
            </div>
            <div class="form-group">
              <%= f.input :description, label_html: { class: 'label-form' }, input_html: { class: 'input-form' }, placeholder: 'Description'   %>
            </div>
            <button class="btn btn-success nextBtn btn-lg pull-right" type="button" >Next</button>
          </div>
        </div>
      </div>
      <div class="row setup-content" id="step-2">
        <div class="col-xs-12">
          <div class="col-md-12">
            <h3> Step 2</h3>
            <div class="form-group">
              <%= f.input :category, collection: Piano::CATEGORIES, label_html: { class: 'label-form' }, input_html: { class: 'input-form' }, placeholder: 'Category'   %>
            </div>
            <div class="form-group">
              <%= f.input :brand_id, collection: Brand.all, label_html: { class: 'label-form' }, input_html: { class: 'input-form' }, placeholder: 'Brand'   %>
            </div>
            <div class="col-xs-offset-right-12">
              <%= f.input :photo, as: :attachinary, label_html: { class: 'label-form' }, input_html: { class: 'input-form' }   %>
              <button class="btn btn-success nextBtn btn-lg pull-right" type="button" >Next</button>
            </div>
          </div>
        </div>
      </div>
      <div class="row setup-content" id="step-3">
        <div class="col-xs-12">
          <div class="col-md-12">
            <h3> Step 3</h3>
            <div class="form-group">
              <%= f.input :address, label_html: { class: 'label-form' }, input_html: { class: 'input-form' }, placeholder: 'Address'   %>
            </div>
            <div class="form-group">
              <%= f.input :price, label_html: { class: 'label-form' }, input_html: { class: 'input-form' }, placeholder: '€'   %>
            </div>
          </div>
        </div>
        <!-- <div class="col-xs-12 col-sm-1 "></div> -->
        <div class="col-xs-12 form button">
          <div class="form-actions text-center">
            <%= f.button :submit, "Créer un piano", class: "text-center btn btn-success btn-lg pull-right"  %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
