<div class="container">
 <div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-login">
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <h2 style="text-align: center; color: #00CC7E">SIGN IN</h2>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.input :email, required: false, autofocus: true %>
            </div>
            <div class="form-group">
              <%= f.input :password, required: false %>
            </div>
            <div class="form-group">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>

          <div class="col-xs-12 text-center space">
            <%= f.button :submit, "Log in" %>
          </div>
          <h2 style="text-align: center; color: black">or</h2>
          <div class="col-xs-12 text-center">
          <a class="btn btn-social btn-facebook" href="auth/facebook">
    <span class="fa fa-facebook"></span> Sign in with Facebook
  </a>
          </div>
        </div>
        <h2 style="text-align: center; color: black"> <a class="speed" href="/users/sign_up">New user ?</a></h2>
        <h2 style="text-align: center; color: black"> <a class="speed" href="/users/password/new">Forgot your password ?</a></h2>
      </div>
    </div>
  </div>
</div>
